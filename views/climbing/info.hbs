<h1>{{route.name}}</h1>
<h6>Grade: {{route.grade}}</h6>
<h5>Pictures:</h5>
{{#each route.pictures}}
    <img src="{{this}}"/>
{{/each}}
<p><b>Description: </b>{{route.description}}</p>
<ul>
    {{#each route.equipment}}
        <li>{{this}}</li>
    {{/each}}
</ul>
<a href="/list/{{route._id}}/edit" class="btn btn-outline-dark btn-sm">Edit Route</a>
    <form action='/list/{{route._id}}/delete' method='post' style="margin:0">
        <button class="btn btn-outline-dark btn-sm" type='submit'>Delete Route</button>
    </form>

<!-- Review Section -->
<h4>Leave a Review!</h4>
<!-- Form to Create a Review -->
<form action="/review/create/{{route._id}}" method="post">
    <select name="user">
        {{#each users}}
            <option value="{{_id}}">{{username}}</option>
        {{/each}}
        <!-- albums.[0] -->
        
    </select>
    <label for="content">Content</label>
    <textarea name="content" id="content" cols="30" rows="5"></textarea>
    <button type="submit">Create the review</button>
</form>
<!-- End of the Form to Create a Review -->
<br>
<!-- Display all the Reviews of the Book that we're seeing -->
    {{#each route.reviews}}
    <div>
        <!-- Actually displaying the review -->
        <p><span>By {{user.username}}</span>: {{content}}</p>
        <!-- Deleting the Review -->
        <form action="/review/delete/{{_id}}" method="post">
            <button type="submit">Delete</button>
        </form>
    </div>
    {{/each}}
<br>
<a href="/list">Return</a>

<form action="/favorites/{{route._id}}" method="post">
    <button type="submit">Add to favorites</button>
</form>