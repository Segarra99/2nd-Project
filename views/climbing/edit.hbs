<h2>Edit {{route.name}}</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/list/{{route.id}}/edit" method="post" enctype="multipart/form-data"> 
      <div class="form-group">
        <label>Name:
          <input type="text" name="name" class="form-control" value="{{route.name}}" />
        </label>
      </div>

      <div class="form-group">
        <label>Grade:
          <input type="number" name="grade" class="form-control" value="{{route.grade}}" max="20" min="0"/>
        </label>
      </div>

      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control">{{route.description}}</textarea>
        </label>
      </div>
      <a href="/edit/pictures/{{route._id}}" class="btn btn-outline-dark btn-sm">Edit Pictures</a>
      <fieldset>
        <legend>Equipment:</legend>

          {{#each allEquipments}}
            {{#ifIn this ../route.equipment}}
              <div>
                <input type="checkbox" id={{this}} name="equipment"  value={{this}} checked/>
                <label for={{this}}>{{this}}</label>
              </div>
              {{else}}
               <div>
                <input type="checkbox" id={{this}} name="equipment"  value={{this}} />
                <label for={{this}}>{{this}}</label>
              </div>
            {{/ifIn}}
        {{/each}}
      </fieldset>
 
      <button type="submit" class="btn btn-primary">Edit</button>
    </form>
  </div>
</div>
<a href="/list/{{route.id}}" class="btn btn-outline-dark btn-sm">Back</a>